<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- wyÅ›wietlany format logu -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] [ %highlight(%-5level)] [%blue(%logger{36})] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>